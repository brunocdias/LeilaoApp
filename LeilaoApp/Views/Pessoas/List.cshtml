@model IEnumerable<LeilaoApp.Models.Pessoa>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Pessoas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"> &nbsp;  Cadastrar nova Pessoa</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Idade</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/pessoa.js"></script>
}