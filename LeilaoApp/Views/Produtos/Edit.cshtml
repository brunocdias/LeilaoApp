@model LeilaoApp.Models.Produto
@{
    var title = "Editar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Create">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <input type="hidden" asp-for="Id_Produto" />
                <div class="col-4">
                    <label asp-for="Nome"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Valor_Inicial"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Valor_Inicial" class="form-control" />
                    <span asp-validation-for="Valor_Inicial" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model">Atualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="List" class="btn btn-success form-control">Voltar para a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

